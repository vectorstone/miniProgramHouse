<view class="container goods-detail">
  <!-- 商品大图 -->
  <view class="banner-img">
    <image class="img" src="../../../../../assets/mockImages/house.png" bindtap="previewImg" />
  </view>

  <!-- 商品的基本信息 -->
  <view class="content">
    <view class="price">
      <view class="price-num">¥{{house.rent}}</view>
      <view class="price-origin-num">¥{{house.rent + 300}}</view>
    </view>
    <!-- 地铁线路 -->
    <view class="title">地铁线路: {{house.subway}}</view>
    <!-- 小区名称 -->
    <view class="desc">小区名称: {{house.community}}</view>
    <!-- 楼栋及房间号 -->
    <view class="desc">楼栋及房间号: {{house.roomNumber}}</view>
    <view class="desc">房间情况: {{house.orientation}}</view>
    <!-- 更新时间 -->
    <view class="desc">更新于: {{house.updateTime}}</view>
  </view>

  <!-- 商品的详细信息 -->
  <view class="detail" wx:for="{{house.houseAttachment}}" wx:key="id">
    <image wx:if="{{item.contentType !== 1}}" class="img" mode="widthFix" src="{{item.url}}" bindtap="previewImg" />
    <video wx:else class="videos" src="{{item.url}}" muted enable-auto-rotation direction></video>
  </view>

  <!-- 商品的底部商品导航 -->
  <van-goods-action>
    <navigator url="/pages/index/index" open-type="switchTab">
      <van-goods-action-icon icon="wap-home-o" text="首页" />
    </navigator>
    <!-- <navigator url="/pages/cart/cart" open-type="switchTab">
      info就是购物车上方的红色的数量角标
      <van-goods-action-icon icon="cart-o" text="购物车" info="{{ allCount }}" />
    </navigator> -->
    <!-- <van-goods-action-icon
      open-type="contact"
      icon="chat-o"
      text="客服"
      bind:click="onClickIcon"
    /> -->
    <van-goods-action-button text="滴滴获取更多信息" type="warning" bindtap="handleAddcart" />
    <!-- <van-goods-action-button text="立即购买" bindtap="handeGotoBuy" /> -->
  </van-goods-action>

  <!-- 加入购物车、立即购买弹框 -->
  <!-- show 控制弹框的隐藏和展示 -->
  <!-- bind:close 点击关闭弹框时触发的回调 -->
  <van-action-sheet show="{{ show }}" bind:close="onClose">
    <view class="sheet-wrapper">
      <view class="goods-item">
        <!-- 需要购买的商品图片 -->
        <view class="mid">
          <image class="img" src="{{house.imageUrl}}" />
        </view>

        <!-- 商品基本信息 -->
        <view class="right">
          <!-- 商品名字 -->
          <view class="title"> {{house.name}} </view>
          <!-- 商品价格 -->
          <view class="buy">
            <view class="price">
              <view class="symbol">¥</view>
              <view class="num">{{house.price}}</view>
            </view>

            <!-- 步进器组件控制购买数量 -->
            <!-- 加入购物车0,立即购买1,立即购买的时候不允许多个商品,所以需要隐藏 -->
            <view class="buy-btn" wx:if="{{buyNow === 0}}">
              <!-- Stepper 步进器，由增加按钮、减少按钮和输入框组成，控制购买数量 -->
              <van-stepper value="{{ count }}" integer min="1" max="200" bind:change="onChangeGoodsCount" />
            </view>
          </view>
        </view>
      </view>

      <!-- 祝福语输入框 -->
