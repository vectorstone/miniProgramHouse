<!-- 列表分类卡片 -->
<view class="goods_cart_container">
  <navigator
    class="navigator_nav"
    url="/modules/goodModule/pages/goods/detail/detail?houseId={{goodItem.id}}"
  >
    <!-- 商品图片 -->
    <!-- <image class="good_img" src="{{goodItem.houseAttachment[0].url}}" mode="widthFix" /> -->
    <video class="good_img" src="{{goodItem.houseAttachment[0].url}}"></video>

    <!-- 房子详细信息 -->
    <view class="goods_item_info">
    <!-- 地铁线路 -->
    <text class="goods_item_info_name">{{goodItem.subway}}</text>
      <!-- 小区名称 -->
      <text class="goods_item_info_community">{{goodItem.community}}</text>
      <!-- 房间朝向 -->
      <text class="goods_item_info_promo">{{goodItem.orientation}}</text>
      <!-- 租金 -->
      <view class="goods_item_info_bottom">
        <view class="goods_item_info_price">
          <text class="text">¥</text>{{goodItem.rent}}
        </view>
        <view class="goods_item_info_origin_price">
          <text class="text">¥</text> {{goodItem.rent + 300}}
        </view>
        <!-- 加入购物车图片 -->
        <!-- <view class="goods_item_info_btn">
          <image class="goods_image" src="/assets/images/buybtn.png" mode="" />
        </view> -->
      </view>
    </view>
  </navigator>
</view>
